{% extends 'base.html.twig' %}

{% block title %}<title>{{ user.FirstName ~ " " ~ user.LastName }}'s Account</title>{% endblock %}

{% block body %}
    <style>
        body{
            margin-top:20px;
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;
        }
        .main-body {
            padding: 15px;
        }
        .card {
            box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0,0,0,.125);
            border-radius: .25rem;
        }

        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

        .gutters-sm>.col, .gutters-sm>[class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }
        .mb-3, .my-3 {
            margin-bottom: 1rem!important;
        }

        .bg-gray-300 {
            background-color: #e2e8f0;
        }
        .h-100 {
            height: 100%!important;
        }
        .shadow-none {
            box-shadow: none!important;
        }
    </style>

    <div class="container">
        {{ form_start(formUser, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Picture</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ form_widget(formUser.image) }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Prénom</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ form_widget(formUser.FirstName) }}
                                    {{ form_errors(formUser.FirstName) }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nom</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ form_widget(formUser.LastName) }}
                                    {{ form_errors(formUser.LastName) }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Genre</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ form_widget(formUser.Gender) }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Numéro de Téléphone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ form_widget(formUser.PhoneNumber) }}
                                    {{ form_errors(formUser.PhoneNumber) }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Addresse</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ form_widget(formUser.Address) }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">CIN</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ form_widget(formUser.CIN) }}
                                    {{ form_errors(formUser.CIN) }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Mot de passe</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ form_widget(formUser.plainPassword) }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    {{ form_widget(formUser.Submit) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(formUser) }}
        </div>
    </div>
{% endblock %}