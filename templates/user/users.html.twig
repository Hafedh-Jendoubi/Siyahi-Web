{% extends 'back_base.html.twig' %}

{% block title %}<title>Admin - Users List</title>{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <!-- Content -->
        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Gestion Admin /</span> List Users</h4>

            <!-- Basic Bootstrap Table -->
            <div class="card">
                <h5 class="card-header">Table Basic</h5>
                <div class="table-responsive text-nowrap">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Activity</th>
                            <th>Picture</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Gender</th>
                            <th>Address</th>
                            <th>Phone Number</th>
                            <th>CIN</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                        <tr>
                            {% for user in tabUsers %}
                            {% for role in user.roles %}
                                {% if role != "ROLE_ADMIN" and role != "SUPER_ADMIN" %}
                                    <td><span class="badge bg-label-primary me-1">Active</span></td>
                                    <td>
                                        {% if user.Gender == 'M' %}
                                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                                <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top" class="avatar avatar-xs pull-up" title="" data-bs-original-title="{{ user.LastName ~ " " ~ user.FirstName }}">
                                                    <img src="{{ asset('front/assets/img/avatars/man.png') }}" alt="Avatar" class="rounded-circle">
                                                </li>
                                            </ul>
                                        {% else %}
                                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                                <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top" class="avatar avatar-xs pull-up" title="" data-bs-original-title="{{ user.LastName }}">
                                                    <img src="{{ asset('front/assets/img/avatars/woman.png') }}" alt="Avatar" class="rounded-circle">
                                                </li>
                                            </ul>
                                        {% endif %}
                                    </td>
                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i>{{ user.LastName }}</td>
                                    <td>{{ user.FirstName }}</td>
                                    {% if user.Gender == 'M' %}
                                        <td>Male</td>
                                    {% else %}
                                        <td>Female</td>
                                    {% endif %}
                                    <td>{{ user.Address }}</td>
                                    <td>{{ user.PhoneNumber }}</td>
                                    <td>{{ user.CIN }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                            {% if role == "ROLE_USER" %}
                                                User
                                            {% else %}
                                                Staff
                                            {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="{{ path('updateUser', { id: user.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                <a class="dropdown-item" href="{{ path('removeUser', { id: user.id }) }}"><i class="bx bx-trash me-1"></i> Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!--/ Basic Bootstrap Table -->
        </div>
        <!-- / Content -->

        <div class="content-backdrop fade"></div>
    </div>
{% endblock %}
