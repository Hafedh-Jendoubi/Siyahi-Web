{% block body %}
    <section class="testimonials">
        <div class="container" data-aos="zoom-in">

            <div class="testimonials-slider swiper" data-aos="fade-up" data-aos-delay="100">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="testimonial-item">
                            <img src="{{ asset('front/assets/img/testimonials/testimonials-1.jpg') }}" class="testimonial-img" alt="">
                            <h3>Jendoubi Haafedh</h3>
                            <h4>Ceo &amp; Founder</h4>
                            <p>
                                <i class="bx bxs-quote-alt-left quote-icon-left"></i>
                                My eyes are on you Staff Team. You shall never run away from me! I will be always watching you.
                                <i class="bx bxs-quote-alt-right quote-icon-right"></i>
                            </p>
                        </div>
                    </div><!-- End testimonial item -->
                </div>
            </div>
        </div>
    </section>
    <hr>
    <div class="section-title" style="text-align: left;">
        <h2>User</h2>
        <h3><span>Add User</span></h3>
        <p class="text-bg-primary" style="margin-left: 0px;">Here you ought to add a new User.</p>
        <br>
        <span>
            {{ form_start(formUser) }}
                <div class="col-12">
                    {{ form_widget(formUser.First_Name) }} &nbsp; &nbsp;
                    {{ form_widget(formUser.Last_Name) }} &nbsp;
                    {{ form_widget(formUser.Gender) }} <br> <br>
                </div>
                <div class="col-12">
                    {{ form_widget(formUser.Address) }} &nbsp; &nbsp;
                    {{ form_widget(formUser.Phone_Number) }} &nbsp;
                    {{ form_widget(formUser.CIN) }} <br> <br>
                </div>
                {{ form_widget(formUser.Submit) }}
            {{ form_widget(formUser.Reset) }}
            {{ form_end(formUser) }}
        </span>
    </div>
{% endblock %}