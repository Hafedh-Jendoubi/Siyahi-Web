{% extends 'back_base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>
    <title>Détails du service</title>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ service.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.Description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary d-block mx-auto" style="width=200px"  href="{{ path('app_service_index') }}">Retour à la liste</a>

    <a class="btn btn-primary d-block mx-auto" style="width=200px; background-color: #FBA834; border-color: #FBA834; " href="{{ path('app_service_edit', {'id': service.id}) }}">Modifier</a>

    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
