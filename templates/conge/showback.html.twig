{% extends 'back_base.html.twig' %}

{% block title %}Conge{% endblock %}

{% block body %}
    <h1>Conge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ conge.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ conge.Description }}</td>
            </tr>
            <tr>
                <th>Date_Debut</th>
                <td>{{ conge.DateDebut ? conge.DateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_Fin</th>
                <td>{{ conge.DateFin ? conge.DateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Justification</th>
                <td>{% if conge.Justification is not null %}<img src="{{ asset('uploads/conge/' ~ conge.Justification) }}" alt="Justification "style="width:200px;"> {% else %}
                    Aucun Contrat n'est trouvé
                {% endif %}</td>
            </tr>
        </tbody>
    </table>
<a class="btn btn-success" style="width: 110px; " href="{{ path('app_reponse_conge_new') }}">Ajouter</a> 
    <a  href="{{ path('app_conge_indexb') }}">retour à la liste</a>

    
{% endblock %}
