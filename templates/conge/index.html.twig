{% extends 'base.html.twig' %}



{% block body %}
    <h1><center>Liste des cong√©s demande</center></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Date_Debut</th>
                <th>Date_Fin</th>
                <th>Justification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
