        <link href="{{ asset('front/assets/vendor/swiper/swiper-bundle.min.css') }}" rel="stylesheet">

        <!-- Fichier CSS principal du modèle -->
        <link href="{{ asset('front/assets/css/style.css') }}" rel="stylesheet">
    {% endblock %}

</head>

<body>

<!-- ======= Barre supérieure ======= -->
<section id="topbar" class="d-flex align-items-center">
    <div class="container d-flex justify-content-center justify-content-md-between">
        <div class="contact-info d-flex align-items-center">
            <i class="bi bi-envelope d-flex align-items-center"><a href="mailto:contact@example.com">siyahi-contact@siyahi.tn</a></i>
            <i class="bi bi-phone d-flex align-items-center ms-4"><span>+216 95 052 214</span></i>
        </div>
        <div class="social-links d-none d-md-flex align-items-center">
            <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
            <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
        </div>
    </div>
</section>

<!-- ======= En-tête ======= -->
<header id="header" class="d-flex align-items-center">
    <div class="container d-flex align-items-center justify-content-between">

        <h1 class="logo"><a href="{{ path('app_user') }}#hero">Siyahi Bank<span>.</span></a></h1>
        <!-- Décommentez ci-dessous si vous préférez utiliser un logo d'image -->
        <!-- <a href="index.html" class="logo"><img src="assets/img/logo.png" alt=""></a>-->

        <nav id="navbar" class="navbar">
            <ul>
                <li><a class="nav-link scrollto" href="{{ path('app_user') }}#hero">Accueil</a></li>
                <li><a class="nav-link scrollto" href="{{ path('app_user') }}#about">À propos</a></li>
                <li><a class="nav-link scrollto" href="{{ path('app_user') }}#team">Équipe</a></li>
                <li><a class="nav-link scrollto" href="{{ path('app_user') }}#contact">Contact</a></li>
                {% if is_granted("ROLE_USER") %}
                    <li class="dropdown"><a href="#"><span>Services</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li class="dropdown"><a href="#"><span>Opérations</span><i class="bi bi-chevron-right"></i></a>
                                <ul>
                                    <li><a href="{{ path('app_compte_client_show_front', {id: app.user.id}) }}">Visiter Compte</a></li>
                                    <li><a href="{{ path('app_compte_client_transfer') }}">Transferer</a></li>
                                </ul>
                            </li>
                            <li class="dropdown"><a href="#"><span>Crédit</span> <i class="bi bi-chevron-right"></i></a>
                                <ul>
                                    <li><a href="{{ path('app_credit_new') }}">Obtenir un crédit</a></li>
                                    <li><a href="{{ path('app_credit_index') }}">Historique</a></li>
                                </ul>
                            </li>
                            <li><a href="{{ path('app_achat_indexFront') }}">Achat</a></li>
                            <li class="dropdown"><a href="#"><span>Réclamation</span> <i class="bi bi-chevron-right"></i></a>
                                <ul>
                                    <li><a href="{{ path('app_reclamation_new') }}">Envoyer une réclamation</a></li>
                                    <li><a href="{{ path('app_reclamation_index') }}">Liste des réclamations</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                {% endif %}
                {% if is_granted("ROLE_USER") or is_granted("ROLE_STAFF") %}
                    <li><a class="nav-link scrollto" href="{{ path('user_account', { id: app.user.id }) }}">Compte</a></li>
                {% endif %}
                {% if is_granted("ROLE_STAFF") %}
                    <li><a class="nav-link scrollto" href="{{ path('app_home') }}">Tableau de bord</a></li>
                {% endif %}
                <li><!-- Juste pour laisser un espace vide entre Contact & Déconnexion --></li>
                {% if is_granted("ROLE_USER") or is_granted("ROLE_STAFF") %}
                    <li><a class="nav-link scrollto" href="{{ path('app_logout') }}">Déconnexion</a></li>
                {% else %}
                    <li><a class="nav-link scrollto" href="{{ path('app_login') }}">Connexion</a></li>
                {% endif %}
            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav><!-- .navbar -->

    </div>
</header>
<!-- Fin de l'en-tête -->

<main id="main">
    {% block body %}

    {% endblock %}
</main><!-- Fin #main -->

