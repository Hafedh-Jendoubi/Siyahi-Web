    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Icônes favorites -->
    <link href="front/assets/img/logo.png" rel="icon">
    <link href="front/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

