{% extends 'front.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


   <center><h3> Votre Panier </h3></center> 

<br>
<table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Prix</th>
                <th>Quantite</th>
                <th>Total</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
        {% for element in dataPanier %}
            <tr>
                <td>{{ element.article.Description }}</td>
                <td>{{ element.article.Prix }}</td>
                <td>{{ element.quantite }}</td>
                <td>{{ element.quantite * element.article.Prix }} TND</td>
                <td>
                    <a href="{{path("add_panier_back",{id: element.article.id})}}" 
                    class="btn btn-success">
                    <i class="bi bi-cart-plus"></i>
                    </a>
                    
                    <a href="{{path("remove",{id: element.article.id})}}" 
                    class="btn btn-warning">
                    <i class="bi bi-cart-dash"></i>
                    </a>
                    
                    <a href="{{path("delete",{id: element.article.id})}}" 
                    class="btn btn-danger">
                    <i class="bi bi-cart-x"></i>
                    </a>
                </td>


            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

        <tfoot>
                <td colspan="3">Total</td>
                <td colspan="text-end">{{ total }} TND</td>
                <td></td>
        </tfoot>
    </table>
         <center> <a href="{{path("app_commande_new")}}" class="btn btn-primary">Passer la Commande</a></center>
{% endblock %}
