{% extends 'back_base.html.twig' %}


{% block body %}
<style>
.image-cercle {
  border-radius: 50%;
  width: 100px; /* Ajustez la taille en fonction de vos besoins */
  height: 100px; /* Ajustez la taille en fonction de vos besoins */
  object-fit: cover;
  
}
</style>

<form method="get" action="{{ path('app_credit_indexb') }}">
        <label for="minSolde" style="font-weight: bold; color: grey;">Solde minimum:</label>
        <input type="number" name="minSolde" id="minSolde" style="border: 1px solid #ccc; padding: 5px;" value="{{ app.request.query.get('minSolde') }}">

        <label for="maxSolde" style="font-weight: bold; color: grey;">Solde maximum:</label>
        <input type="number" name="maxSolde" id="maxSolde" style="border: 1px solid #ccc; padding: 5px;" value="{{ app.request.query.get('maxSolde') }}">

        <button  class="btn btn-secondary" style="width: 80px;height: 38px" type="c-btn">Filter</button>
    </form>

    <input id="search-input" class="form-control border-0 shadow-none" type="form-control" placeholder="Search...">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#search-input").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("table tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

    <h1>Listes des credits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email_client</th>
                <th>Solde_demande</th>
                <th>Date_debut_paiement</th>
                <th>Nbr_mois_paiement</th>
                <th>Description</th>
                <th>Contrat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for credit in credits %}
            <tr>
                <td>{{ credit.id }}</td>
                <td>{{ credit.User.email }}</td>
                <td>{{ credit.soldeDemande }}DTN</td>
                <td>{{ credit.dateDebutPaiement ? credit.dateDebutPaiement|date('Y-m-d') : '' }}</td>
                <td>{{ credit.nbrMoisPaiement }}</td>
                <td>{{ credit.description }}</td>
                <td>
                {% if credit.Contrat is not null %}
                    <img src="{{ asset('uploads/credit/' ~ credit.Contrat) }}" class="image-cercle"  alt="Contrat "style="width:100px;">
                {% else %}
                    Aucun Contrat n'est trouvé
                {% endif %}
                </td>
                <td>
                    <a  class="btn btn-info" style="width: 110px;"  href="{{ path('app_credit_showb', {'id': credit.id}) }}">Détailles</a>
                   {% if credit.reponseCredits is empty %}
                   <a  class="btn btn-success" style="width: 110px; " href="{{ path('app_reponse_credit_new') }}">Traiter</a>
                   {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">La liste est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
<div class="d-flex justify-content-between">
    <div>
        <a href="{{ path('app_credit_indexb', {'sortBy': 'montant'}) }}" class="btn btn-secondary">Tri par montant</a>
        <a href="{{ path('app_credit_indexb', {'sortBy': 'date'}) }}" class="btn btn-secondary">Tri par date</a>
    </div>
    <a href="{{ path('credit_statistics3') }}" class="btn btn-secondary" style="width: 208px;">Statistiques des crédits</a>
</div>

      <div class="pagination">
        {{ knp_pagination_render(credits, 'credit/my_custom_template.html.twig') }}
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $("#search-input").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("table tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>


{% endblock %}
