{% extends 'back_base.html.twig' %}


{% block body %}
<style>
.image-cercle {
  border-radius: 50%;
  width: 100px; /* Ajustez la taille en fonction de vos besoins */
  height: 100px; /* Ajustez la taille en fonction de vos besoins */
  object-fit: cover;
  
}
</style>

<form method="get" action="{{ path('app_filtre') }}">
        <label for="minSolde">Minimum Solde:</label>
        <input type="number" name="minSolde" id="minSolde" value="{{ app.request.query.get('minSolde') }}">
        <br>

        <label for="maxSolde">Maximum Solde:</label>maxSolde
        <input type="number" name="maxSolde" id="maxSolde" value="{{ app.request.query.get('max_price') }}">
        <br>

        <button type="c-btn">Filter</button>
    </form>

    <h1>Listes des credits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email_client</th>
                <th>Solde_demande</th>
                <th>Date_debut_paiement</th>
                <th>Nbr_mois_paiement</th>
                <th>Description</th>
                <th>Contrat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for credit in credits %}
            <tr>
                <td>{{ credit.id }}</td>
                <td>{{ credit.User.email }}</td>
                <td>{{ credit.soldeDemande }}DTN</td>
                <td>{{ credit.dateDebutPaiement ? credit.dateDebutPaiement|date('Y-m-d') : '' }}</td>
                <td>{{ credit.nbrMoisPaiement }}</td>
                <td>{{ credit.description }}</td>
                <td>
                {% if credit.Contrat is not null %}
                    <img src="{{ asset('uploads/credit/' ~ credit.Contrat) }}" class="image-cercle"  alt="Contrat "style="width:100px;">
                {% else %}
                    Aucun Contrat n'est trouvé
                {% endif %}
                </td>
                <td>
                    <a  class="btn btn-info" style="width: 110px; "  href="{{ path('app_credit_showb', {'id': credit.id}) }}">Détailles</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">La liste est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
<div class="d-flex justify-content-end">
    <a href="{{ path('credit_statistics3') }}" class="btn btn-secondary" style="width: 208px; ">Statistiques des crédits</a>
</div>
 <a href="{{ path('app_credit_indexb', {'sortBy': 'montant'}) }}">Tri par montant</a>
<a href="{{ path('app_credit_indexb', {'sortBy': 'date'}) }}">Tri par date</a>
      <div class="pagination">
        {{ knp_pagination_render(credits, 'credit/my_custom_template.html.twig') }}
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $("#search-input").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("table tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>


{% endblock %}
